    bottom: -8px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--color-indigo), var(--color-gold));
  }

  .concept-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .concept-text h3 {
    color: var(--color-indigo);
    font-size: 1.5rem;
    margin-bottom: 1.2rem;
  }

  .concept-text p {
    margin-bottom: 1.2rem;
    line-height: 1.7;
  }

  .concept-image {
    order: -1;
  }

  .image-container {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .image-decoration {
    position: absolute;
    top: -15px;
    left: -15px;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-gold) 0%, transparent 70%);
    opacity: 0.7;
    z-index: 1;
    border-radius: 50%;
  }

  .concept-image img {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
    z-index: 0;
    transition: transform 0.3s ease;
  }

  .concept-image:hover img {
    transform: scale(1.03);
  }

  @media (min-width: 481px) {
    .section-title {
      margin-bottom: 2.5rem;
      font-size: 2rem;
    }

    .concept-text h3 {
      font-size: 1.6rem;
    }
  }

  @media (min-width: 769px) {
    .concept::before {
      width: 300px;
      height: 300px;
    }

    .section-title {
      margin-bottom: 3rem;
      font-size: 2.2rem;
    }

    .title-decoration::after {
      bottom: -10px;
    }

    .concept-content {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .concept-text h3 {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }

    .concept-text p {
      margin-bottom: 1.5rem;
      line-height: 1.8;
    }

    .concept-image {
      order: 0;
    }

    .image-decoration {
      top: -20px;
      left: -20px;
      width: 100px;
      height: 100px;
    }
  }
</style>
