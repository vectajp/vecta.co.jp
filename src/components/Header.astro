---
import { navigationItems } from '../data/navigation'
---

<header>
  <div class="container">
    <div class="header-content center">
      <div class="logo">
        <a href="/">
          <img src="/assets/logo.svg" alt="Vecta" height="512" loading="eager">
        </a>
      </div>
      <nav>
        <ul>
          {navigationItems.map((item) => (
            <li>
              <a href={item.href} class="nav-link">{item.label}</a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>

<style lang="scss">
  @use '../styles/scss/_breakpoints.scss' as *;
  header {
    position: static;
    width: 100%;
    background: var(--color-white);
    border-bottom: none;
    padding-bottom: 1.5rem;
  }

  .header-content.center {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .logo img {
    height: 512px;
    width: auto;
    max-width: 100%;
    display: block;
  }

  .logo-text {
    font-family: var(--font-monospace);
    font-size: 2rem;
    color: var(--color-indigo-darker);
    letter-spacing: 0.1em;
    font-weight: 700;
    margin-top: 0.5rem;
  }

  nav {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  nav ul {
    display: flex;
    flex-direction: row;
    gap: 2.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    justify-content: center;
  }

  nav li {
    position: relative;
  }

  .nav-link {
    position: relative;
    font-family: var(--font-secondary);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-indigo-darker);
    text-decoration: none;
    padding: 0.2rem 0.5rem 0.5rem 0.5rem;
    transition: color 0.2s;
    border: none;
    background: none;
    outline: none;
    display: inline-block;
  }

  .nav-link::after {
    content: '';
    display: block;
    margin: 0 auto;
    margin-top: 0.4rem;
    width: 2.5rem;
    height: 3px;
    background: transparent;
    border-radius: 2px;
    transition: background 0.2s;
  }

  .nav-link.active::after,
  .nav-link:hover::after {
    background: var(--color-indigo-darker);
  }

  .nav-link.active,
  .nav-link:hover {
    color: var(--color-indigo-darker);
  }

  .nav-link:focus, .nav-link:focus-visible {
    outline: none;
  }

  @media (max-width: $breakpoint-medium) {
    .header-content.center {
      gap: 1rem;
    }
    .logo img {
      height: 320px;
    }
    .logo-text {
      font-size: 1.3rem;
    }
    nav ul {
      gap: 1.2rem;
    }
    .nav-link.active::after,
    .nav-link:hover::after {
      width: 1.5rem;
    }
  }
</style>

<script>
  // アクティブなリンクにクラスを付与
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', function(this: HTMLElement) {
      navLinks.forEach(l => l.classList.remove('active'));
      this.classList.add('active');
    });
  });
</script>
