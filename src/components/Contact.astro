<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const submitButton = document.getElementById('submitButton') as HTMLButtonElement;
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');

    // ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³ãƒ«ãƒ¼ãƒ«
    const validators = {
      name: (value: string) => {
        if (!value.trim()) return 'ãŠåå‰ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
        if (value.length > 100) return 'ãŠåå‰ã¯100æ–‡å­—ä»¥å†…ã§å…¥åŠ›ã—ã¦ãã ã•ã„';
        return '';
      },
      email: (value: string) => {
        if (!value.trim()) return 'ãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(value)) return 'æœ‰åŠ¹ãªãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
        return '';
      },
      phone: (value: string) => {
        if (!value) return '';
        const phoneRegex = /^[\d-+()]+$/;
        if (!phoneRegex.test(value)) return 'æœ‰åŠ¹ãªé›»è©±ç•ªå·ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
        return '';
      },
      subject: (value: string) => {
        if (!value.trim()) return 'ä»¶åã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
        if (value.length > 200) return 'ä»¶åã¯200æ–‡å­—ä»¥å†…ã§å…¥åŠ›ã—ã¦ãã ã•ã„';
        return '';
      },
      message: (value: string) => {
        if (!value.trim()) return 'ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„';
        if (value.length > 1000) return 'ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã¯1000æ–‡å­—ä»¥å†…ã§å…¥åŠ›ã—ã¦ãã ã•ã„';
        return '';
      },
    };

    // ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ãŒã‚¿ãƒƒãƒã•ã‚ŒãŸã‹ã‚’è¨˜éŒ²
    const touchedFields = new Set<string>();

    // ãƒªã‚¢ãƒ«ã‚¿ã‚¤ãƒ ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³
    const validateField = (field: HTMLInputElement | HTMLTextAreaElement, showError = true) => {
      const errorElement = document.getElementById(`${field.name}-error`);
      const validator = validators[field.name as keyof typeof validators];

      if (validator && errorElement) {
        const error = validator(field.value);
        
        // ã‚¿ãƒƒãƒã•ã‚ŒãŸãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã¾ãŸã¯é€ä¿¡æ™‚ã®ã¿ã‚¨ãƒ©ãƒ¼ã‚’è¡¨ç¤º
        if (showError && touchedFields.has(field.name)) {
          errorElement.textContent = error;
          field.classList.toggle('error', !!error);
        }
        
        return !error;
      }
      
      return true;
    };

    // ãƒ•ã‚©ãƒ¼ãƒ å…¨ä½“ã®ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³
    const validateForm = (showErrors = false) => {
      const inputs = form.querySelectorAll('input[required], textarea[required]');
      let isValid = true;

      inputs.forEach((input) => {
        const field = input as HTMLInputElement | HTMLTextAreaElement;
        const validator = validators[field.name as keyof typeof validators];
        
        if (validator) {
          const error = validator(field.value);
          if (error) {
            isValid = false;
          }
          
          // ã‚¨ãƒ©ãƒ¼è¡¨ç¤ºã¯ã€ã‚¿ãƒƒãƒã•ã‚ŒãŸãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã®ã¿
          if (showErrors && touchedFields.has(field.name)) {
            const errorElement = document.getElementById(`${field.name}-error`);
            if (errorElement) {
              errorElement.textContent = error;
              field.classList.toggle('error', !!error);
            }
          }
        }
      });

      // é€ä¿¡ãƒœã‚¿ãƒ³ã®çŠ¶æ…‹ã‚’å¸¸ã«æ›´æ–°
      submitButton.disabled = !isValid;
      
      return isValid;
    };

    // å…¥åŠ›ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã®ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
    form.querySelectorAll('input, textarea').forEach((field) => {
      field.addEventListener('blur', () => {
        const fieldName = (field as HTMLInputElement | HTMLTextAreaElement).name;
        touchedFields.add(fieldName);
        validateField(field as HTMLInputElement | HTMLTextAreaElement);
        validateForm(true);
      });

      field.addEventListener('input', () => {
        const fieldName = (field as HTMLInputElement | HTMLTextAreaElement).name;
        
        // ã‚¿ãƒƒãƒã•ã‚ŒãŸãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã®ã¿ã‚¨ãƒ©ãƒ¼è¡¨ç¤º
        if (touchedFields.has(fieldName)) {
          validateField(field as HTMLInputElement | HTMLTextAreaElement);
        }
        
        // é€ä¿¡ãƒœã‚¿ãƒ³ã®çŠ¶æ…‹ã¯å¸¸ã«æ›´æ–°ï¼ˆã‚¨ãƒ©ãƒ¼è¡¨ç¤ºãªã—ï¼‰
        validateForm(false);
      });
    });

    // ãƒ•ã‚©ãƒ¼ãƒ é€ä¿¡å‡¦ç†
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // ã™ã¹ã¦ã®ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã‚’ã‚¿ãƒƒãƒæ¸ˆã¿ã«ã—ã¦ã€ã‚¨ãƒ©ãƒ¼ã‚’è¡¨ç¤º
      form.querySelectorAll('input, textarea').forEach((field) => {
        touchedFields.add((field as HTMLInputElement | HTMLTextAreaElement).name);
      });

      if (!validateForm(true)) return;

      submitButton.disabled = true;
      submitButton.textContent = 'é€ä¿¡ä¸­...';

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const API_BASE_URL = import.meta.env.PUBLIC_API_BASE_URL;

        console.log('API_BASE_URL:', API_BASE_URL);
        console.log('Sending data:', data);

        // ç›´æ¥APIã‚’å‘¼ã³å‡ºã™ï¼ˆCORSè¨­å®šãŒå¿…è¦ï¼‰
        const response = await fetch(`${API_BASE_URL}/contacts`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        console.log('Response status:', response.status);
        console.log('Response ok:', response.ok);

        if (!response.ok) {
          const errorText = await response.text();
          console.error('API error response:', errorText);
          throw new Error(`API request failed: ${response.status} - ${errorText}`);
        }

        const result = await response.json();
        console.log('API success response:', result);

        // æˆåŠŸæ™‚ã®å‡¦ç†
        // ãƒ•ã‚©ãƒ¼ãƒ ã‚’ãƒªã‚»ãƒƒãƒˆ
        form.reset();
        
        // ã‚¿ãƒƒãƒçŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆ
        touchedFields.clear();
        
        // ã‚¨ãƒ©ãƒ¼è¡¨ç¤ºã‚’ã‚¯ãƒªã‚¢
        form.querySelectorAll('.error-message').forEach((el) => {
          el.textContent = '';
        });
        form.querySelectorAll('input, textarea').forEach((field) => {
          field.classList.remove('error');
        });
        
        // æˆåŠŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’è¡¨ç¤º
        successMessage!.style.display = 'block';
        errorMessage!.style.display = 'none';
        
        // ãƒœã‚¿ãƒ³ã‚’å…ƒã«æˆ»ã™
        submitButton.disabled = false;
        submitButton.textContent = 'é€ä¿¡ã™ã‚‹';
        
        // ãƒ•ã‚©ãƒ¼ãƒ ã¯è¡¨ç¤ºã—ãŸã¾ã¾ã«ã™ã‚‹
        // 5ç§’å¾Œã«æˆåŠŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’éè¡¨ç¤ºã«ã™ã‚‹
        setTimeout(() => {
          successMessage!.style.display = 'none';
        }, 5000);
        
        // ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³ã‚’ãƒªã‚»ãƒƒãƒˆ
        validateForm(false);
      } catch (error: any) {
        // ã‚¨ãƒ©ãƒ¼æ™‚ã®å‡¦ç†
        console.error('Contact form submission error:', error);

        let errorMessage = 'ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ';

        if (error instanceof Error) {
          console.error('Error details:', {
            message: error.message,
            stack: error.stack,
            type: error.name
          });

          // CORSã‚¨ãƒ©ãƒ¼ã®å¯èƒ½æ€§ã‚’åˆ¤å®š
          if (error.message.includes('Failed to fetch')) {
            errorMessage = 'ã‚µãƒ¼ãƒãƒ¼ã¸ã®æ¥ç¶šã«å¤±æ•—ã—ã¾ã—ãŸã€‚CORSã‚¨ãƒ©ãƒ¼ã®å¯èƒ½æ€§ãŒã‚ã‚Šã¾ã™ã€‚';
            console.error('CORS Error: APIã‚µãƒ¼ãƒãƒ¼ã§CORSè¨­å®šã‚’ç¢ºèªã—ã¦ãã ã•ã„ã€‚');
            console.error('è¨±å¯ãŒå¿…è¦ãªOrigin:', window.location.origin);
          } else {
            errorMessage = `ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ${error.message}`;
          }
        }

        // ã‚¨ãƒ©ãƒ¼ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’è¡¨ç¤º
        const errorMessageEl = document.getElementById('error-message');
        if (errorMessageEl) {
          const errorP = errorMessageEl.querySelector('p');
          if (errorP) {
            errorP.textContent = errorMessage;
          }
        }

        errorMessageEl!.style.display = 'block';
        submitButton.disabled = false;
        submitButton.textContent = 'é€ä¿¡ã™ã‚‹';
      }
    });

    // åˆæœŸçŠ¶æ…‹ã§ã¯é€ä¿¡ãƒœã‚¿ãƒ³ã‚’æœ‰åŠ¹ã«
    submitButton.disabled = false;
  });
</script>
