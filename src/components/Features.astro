---
const features = [
  {
    title: "紙の現場マニュアルによる業務属人化",
    description: "PDFやWordを読み込みAIによる自然言語検索・要約が可能になります。",
    icon: "📄"
  },
  {
    title: "スタンドアロンPCでのAI利用が不可",
    description: "公開したくないオフラインな情報にも、AI・軽量MCPサーバーを開発することで、AIを利用できるようになります。",
    icon: "💻"
  },
  {
    title: "ITリテラシーのばらつき",
    description: "会話型UIを通じて誰でも直感的に操作可能になります。",
    icon: "💬"
  }
];
---

<section id="features" class="features">
  <div class="container">
    <h2 class="section-title">
      <span class="title-decoration">解決する課題</span>
    </h2>
    <div class="features-grid">
      {features.map((feature, index) => (
        <div class="feature-card">
          <div class="feature-icon">{feature.icon}</div>
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    background: linear-gradient(to bottom, white, #f0f2f5);
    position: relative;
  }

  .section-title {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .title-decoration {
    position: relative;
    display: inline-block;
  }

  .title-decoration::after {
    content: "";
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--color-indigo), var(--color-gold));
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .feature-card {
    background-color: white;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .feature-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--color-indigo), var(--color-gold));
    z-index: -1;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1.2rem;
  }

  .feature-card h3 {
    color: var(--color-indigo);
    margin-bottom: 0.8rem;
    font-size: 1.3rem;
  }

  .feature-card p {
    color: var(--color-sumi);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  @media (min-width: 601px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .feature-card h3 {
      font-size: 1.4rem;
    }
  }

  @media (min-width: 901px) {
    .section-title {
      margin-bottom: 3rem;
      font-size: 2.2rem;
    }

    .title-decoration::after {
      bottom: -10px;
    }

    .features-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .feature-card {
      padding: 2rem;
    }

    .feature-icon {
      font-size: 3rem;
      margin-bottom: 1.5rem;
    }

    .feature-card h3 {
      margin-bottom: 1rem;
      font-size: 1.5rem;
    }

    .feature-card p {
      line-height: 1.7;
      font-size: 1rem;
    }
  }
</style>