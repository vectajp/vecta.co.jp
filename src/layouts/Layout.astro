---
import SEO from '../components/SEO.astro'

const {
  title: titlePrefix,
  description = 'アナログ情報をベクトルデータの「ブロック」へ構造化することで、世の中の知識を構造化する。Vectaは「まち」にある色々なカタチの「知識」を未来につなぐことがミッションです。',
  ogpImageURL = new URL('/ogp.png', Astro.url),
} = Astro.props
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
<meta name="theme-color" content="#0A1E3C" />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Vecta" />
		<link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&family=Montserrat:wght@400;500;600;700&family=Share+Tech+Mono&display=swap" rel="stylesheet">
<link rel="preload" href="/assets/logo.svg" as="image" type="image/svg+xml">
    <SEO
      title={titlePrefix}
      description={description}
      ogpImageURL={ogpImageURL}
    />
	</head>
	<body>
		<slot />
	</body>
</html>
