---
import type { CollectionEntry } from 'astro:content'
import ArticleBaseHead from '../components/ArticleBaseHead.astro'
import FooterMini from '../components/FooterMini.astro'
import FormattedDate from '../components/FormattedDate.astro'
import HeaderMini from '../components/HeaderMini.astro'

type Props = CollectionEntry<'article'>['data']

const { title, description, pubDate, updatedDate, heroImage } = Astro.props
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
		<ArticleBaseHead title={title} description={description} />
		<style>
			@use '../styles/scss/_breakpoints.scss' as *;
			
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				width: 100%;
				max-width: 100%;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			
			/* Mobile responsive styles */
			@media (max-width: $breakpoint-medium) {
				main {
					width: calc(100% - 1rem);
				}
				.hero-image {
					padding: 0 1rem;
				}
				.prose {
					width: 100%;
					max-width: calc(100% - 1rem);
					padding: 0.75em;
				}
				.title {
					padding: 0.75em 0;
				}
				.title h1 {
					font-size: 1.5rem;
					line-height: 1.2;
				}
			}
			
			@media (max-width: $breakpoint-small) {
				main {
					width: calc(100% - 0.5rem);
				}
				.hero-image {
					padding: 0 0.75rem;
				}
				.prose {
					max-width: calc(100% - 0.5rem);
					padding: 0.5em;
				}
				.title {
					padding: 0.5em 0;
				}
				.title h1 {
					font-size: 1.25rem;
				}
				.hero-image img {
					border-radius: 8px;
				}
			}
		</style>
	</head>

	<body>
		<HeaderMini />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<FooterMini />
	</body>
</html>
